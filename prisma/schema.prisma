datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TypeDefinition {
  id     Int             @id @default(autoincrement())
  name   String          @unique
  fields FieldDefinition[]
  rows   Row[]           // <-- Add this line to define the opposite relation
}

model FieldDefinition {
  id         Int             @id @default(autoincrement())
  name       String
  typeId     Int
  fieldType  String
  TypeDefinition TypeDefinition @relation(fields: [typeId], references: [id])
}

model Row {
  id             Int             @id @default(autoincrement())
  typeId         Int
  data           Json
  TypeDefinition TypeDefinition  @relation(fields: [typeId], references: [id])
}
